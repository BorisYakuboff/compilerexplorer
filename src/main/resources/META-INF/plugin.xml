<idea-plugin>
    <id>com.compilerexplorer.compilerexplorer</id>
    <name>Compiler Explorer</name>
    <vendor email="grebenyukoleksandr@gmail.com">Oleksandr Grebenyuk</vendor>

    <description><![CDATA[
    Compiler Explorer UI plugin for CLion.
    This plugin shows compilation results from a remote Compiler Explorer instance.
    ]]></description>

    <idea-version since-build="180"/>

    <depends>com.intellij.modules.clion</depends>
    <depends>com.intellij.modules.cidr.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <projectConfigurable groupId="build" instance="com.compilerexplorer.settings.SettingsConfigurable" id="compilerexplorer" displayName="Compiler Explorer"/>
        <projectService serviceImplementation="com.compilerexplorer.common.SettingsProvider"/>
        <toolWindow id="Compiler Explorer" anchor="right" secondary="true" factoryClass="com.compilerexplorer.ToolWindowFactory" icon="/icons/toolWindow.png"/>
    </extensions>
</idea-plugin>
